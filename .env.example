# OpenAI Configuration
# Your OpenAI API key for GPT models and text-to-speech
OPENAI_API_KEY=your_openai_api_key_here
# Model to use - options include "gpt-4o-mini", "gpt-4o", etc.
OPENAI_MODEL_NAME=gpt-4o-mini

# Digital Ocean Spaces Configuration
# Endpoint URL for Digital Ocean Spaces
DO_SPACES_ENDPOINT=https://region.digitaloceanspaces.com
# Region where your space is located
DO_SPACES_REGION=region
# Access key for your Digital Ocean Spaces
DO_SPACES_KEY=your_do_spaces_key
# Secret key for your Digital Ocean Spaces
DO_SPACES_SECRET=your_do_spaces_secret
# Name of your Digital Ocean Space
DO_SPACES_BUCKET=your_bucket_name
# Base URL for accessing your files
DO_SPACES_BASE_URL=https://your-bucket.region.digitaloceanspaces.com

# FFmpeg Configuration
# Path to your FFmpeg executable - important for video processing
FFMPEG_PATH=/path/to/ffmpeg

# RAG (Retrieval-Augmented Generation) Configuration
# Enable or disable RAG enhancement
ENABLE_RAG=true
# Your Tavily API key for search capabilities
TAVILY_API_KEY=your_tavily_api_key

# Pinecone Configuration
# Your Pinecone API key for vector storage
PINECONE_API_KEY=your_pinecone_api_key
# Name of your Pinecone index
PINECONE_INDEX_NAME=your_pinecone_index_name
# Model to use for text embeddings
TEXT_EMBEDDING_MODEL=text-embedding-3-small

# Application Configuration
# Name of the application
APP_NAME=Vision Forge AI
# API version prefix
API_V1_STR=/api/v1
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# Output directory for temporary files
OUTPUT_DIR=output

ENABLE_SEARCH_PINECONE=true
ENABLE_UPSERT_PINECONE=true
